{
	"manifest_version": 2,
	"name": "CR-Unblocker",
	"version": "1.0.0",
	"description": "A tool that will set the Crunchyroll Session ID to an American session ID",
	"author": "Onestay",

	"icons": {
		"128": "Crunchyroll-512.png"
	},

	"permissions": [
		"background",
		"cookies",
		"notifications",
		"storage",
		"tabs",
		"<all_urls>"
	],

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"]
	}],

	"browser_action": {
		"default_icon": {
			"128": "Crunchyroll-512.png"
		}
	},

	"background": {
		"page": "background.html",
		"persistent": true
	}
}
